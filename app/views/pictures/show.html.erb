<%= image_tag(@picture.image.url(:thumb)) %>
<%= @picture.feeling %>
	Price: Â£<%= number_with_precision(@picture.price, precision: 2) %>
	<%= link_to 'Like', picture_likes_path(@picture), method: :post %>
	Likes: <%= @picture.likes.count %>
	Comments: <%= @picture.comments.count %> 
	<% if @picture.comments.any? %>
		<% @picture.comments.each do |comment|%>
			<%= comment.created_at %>
			By: <%= (User.find(comment.user_id)).email %>
			<%= comment.message %>
			<% if user_signed_in? && current_user.id == comment.user_id %>
				<%= link_to "Delete comment", picture_comment_path(@picture, comment), method: :delete %>
			<% end %>
		<% end %>
	<% else %>
		No comments yet
	<% end %>
<%= link_to "Delete picture", picture_path(@picture), method: :delete %>
<%= link_to "Edit picture", edit_picture_path(@picture) %>
<%= link_to "Buy now", picture_charges_path(@picture), method: :post %>