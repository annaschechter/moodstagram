<%= form_tag picture_charges_path do %>
  <article>
    <label class="amount">
      <span>Amount: $<%= number_with_precision(@pic.price, precision: 2) %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Payment for Picture"
          data-amount= ></script>
<% end %>